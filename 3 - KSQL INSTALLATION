
git clone https://github.com/confluentinc/ksql

go to r/ksql/config

edit nano ksql-server.properties 
# The set of Kafka brokers to bootstrap Kafka cluster information from:
bootstrap.servers=ec2-3-17-3-207.us-east-2.compute.amazonaws.com:9092,ec2-3-17-3-207.us-east-2.compute.amazonaws.com:9093

start
bin/ksql-server-start /ksql/ksql-server.properties

connect 
bin/ksql http://localhost:8088

export CLASSPATH=/usr/share/java/my-base/*:/usr/share/java/my-ksql-server/*:/opt/my-company/lib/ksql/*:$CLASSPATH
export KSQL_CLASSPATH="${CLASSPATH}"
